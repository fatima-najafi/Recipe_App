<h1 class="title is-flex is-justify-content-center">List of Public Recipes</h1>

<div class="container" style="width: 50%;">
  <% @public_recipes.each do |public_recipe| %>   
    <div class="is-flex mt-4 mb-4 column has-background-light radius-all shadow-gray">
      <div>
        <%= link_to public_recipe.name, recipe_path(public_recipe), class: "title is-5 has-text-grey is-info-dark" %>
        <p class="mt-3">By: <%= public_recipe.user.name %></p>
      </div>
      <div class="ml-5">
        <p>Total food items: <%= public_recipe.foods.count %></p>
        <p>Total price: <%= number_to_currency(public_recipe.foods.sum(:price))%></p>
      </div>
    </div>
  <% end %>
</div>
